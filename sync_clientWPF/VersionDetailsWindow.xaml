<Window x:Class="sync_clientWPF.VersionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Version details" Height="300" Width="317" Icon="Synchronize.ico" WindowStartupLocation="Manual">
	<Grid>
		<ListView Name="lDetails" Margin="10,36,10,10">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Filename" Width="200" DisplayMemberBinding="{Binding sFilename}"/>
					<GridViewColumn Header="Operation" Width="70" DisplayMemberBinding="{Binding sOperation}"/>
				</GridView>
			</ListView.View>
		</ListView>

		<Label Content="Version:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Label Name="lVersion" Content="0" HorizontalAlignment="Left" Margin="62,10,0,0" VerticalAlignment="Top"/>

	</Grid>
</Window>
