<Window x:Class="sync_clientWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" MinHeight="250" MaxHeight="250" Width="300" MinWidth="300" Closed="Window_Closed" Topmost="True" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="Synchronize.ico">
	<Grid>
		<Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		<TextBox Name="tUsername" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,36,10,0"/>
		<Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,64,0,0"/>
		<PasswordBox Name="tPassword" VerticalAlignment="Top" Height="23" Margin="10,95,10,0"/>
		<Button Content="LogIn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,164,0,0" Click="LogIn_Click"/>
		<Button Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="90,164,0,0" Click="Register_Click"/>
		<Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,164,10,0" Click="Cancel_Click"/>
		<Label Name="lError" Content="Error message" Margin="10,0,10,1" Foreground="Red" FontWeight="Bold" Height="26" VerticalAlignment="Bottom"/>
		<CheckBox Content="Keep me logged in" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,123,0,0" IsChecked="True"/>
	</Grid>
</Window>
