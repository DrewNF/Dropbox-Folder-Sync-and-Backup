<Window x:Class="sync_clientWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="231" Width="300" Closed="Window_Closed" Topmost="True" WindowStartupLocation="CenterScreen">
	<Grid>
		<Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
		<TextBox Name="tUsername" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,36,10,0"/>
		<Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,64,0,0"/>
		<PasswordBox Name="tPassword" VerticalAlignment="Top" Height="23" Margin="10,95,10,0"/>
		<Button Content="LogIn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,148,0,0" Click="LogIn_Click"/>
		<Button Content="Register" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="90,148,0,0" Click="Register_Click"/>
		<Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,148,10,0" Click="Cancel_Click"/>
		<Label Name="lError" Content="Error message" VerticalAlignment="Top" Margin="10,173,10,0" Foreground="Red" FontWeight="Bold"/>
	</Grid>
</Window>
